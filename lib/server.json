{
    "listeners": {
        "*:8080": {
            "pass": "routes"
        }
  
    },

    "routes": [
        {
            "match": {
                "uri": [
                    "*.php",
                    "*.php/*",
                    "/wp-admin/",
                    "!/wp-content/uploads/"
                ]
            },
  
            "action": {
                "pass": "applications/wordpress/direct"
            }
        },
        {
            "match":{
                "uri":[
                    "/wp-content/uploads/*"
                ]
            },
            "action":{
                "share": "/home/pcsoft/Public/razico/recovertactical.co.il$uri",
                "fallback":{
                    "return":301,
                    "location":"$uri"
                }
                
            }
        },
        {
            "action": {
                "share": "/home/pcsoft/Public/razico/recovertactical.co.il$uri",
                "fallback": {
                    "pass": "applications/wordpress/index"
                }
            }
        }
      
    ],
  
    "applications": {
        "wordpress": {
            "type": "php",
            "processes": {
              "max": 15,
              "spare": 5,
              "idle_timeout": 180
            },
            "targets": {
                "direct": {
                    "root": "/home/pcsoft/Public/razico/recovertactical.co.il"
                },
  
                "index": {
                    "root": "/home/pcsoft/Public/razico/recovertactical.co.il",
                    "script": "index.php"
                }
            },
            "options": {
                "file": "/home/pcsoft/Public/razico/recovertactical.co.il/server/php.ini",
                "admin": {
                    "memory_limit": "256M",
                    "variables_order": "EGPCS"
                },
        
                "user": {
                    "display_errors": "1"
                }
            },            
            "environment":{
                "DEVELOPMENT": "local"
            }
        }
    }
}
